
<div class="container">
  <div class="row">
  <%= render "partials/header" %>
  </div>
</div>
<hr>
<p style="color: green"><%= notice %></p>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-12">
       <h1>Posts</h1>
       <%= link_to "New post", new_post_path %>

<table class="table">
  <thead>
    <tr>
       <th scope="col">Title</th>
      <th scope="col">Body</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
       <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><% if can? :update, post %>
      <%= link_to "Edit this post", edit_post_path(post) %> 
       <%= link_to "Destroy this post", post, method: :delete %>
     <% end %>
  <%= link_to "Back to posts", @post %></td>
     </tr>
   <% end %>
  </tbody>
</table>
     </div>
  </div>
</div>

 

